<idea-plugin>
    <id>de.php_perfect.intellij.ddev</id>
    <name>DDEV Integration</name>
    <vendor email="nico.loeber94@gmail.com" url="https://github.com/php-perfect">PHP-Perfect</vendor>

    <description><![CDATA[
    Integrates DDEV into JetBrains IDEs for your convenience
    ]]></description>

    <resource-bundle>messages.DdevIntegrationBundle</resource-bundle>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <applicationListeners>
        <listener class="de.php_perfect.intellij.ddev.event.DevInitialisedListener"
                  topic="de.php_perfect.intellij.ddev.event.DdevInitialisedNotifier"/>
    </applicationListeners>

    <extensionPoints>
        <extensionPoint name="ddevAwareActivity" interface="de.php_perfect.intellij.ddev.DdevAwareActivity"/>
    </extensionPoints>

    <extensions defaultExtensionNs="de.php_perfect.intellij.ddev">
        <ddevAwareActivity implementation="de.php_perfect.intellij.ddev.activities.CheckVersionActivity"/>
        <ddevAwareActivity implementation="de.php_perfect.intellij.ddev.activities.WatchDdevActivity"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="DdevIntegration" key="notification_group.main" displayType="BALLOON"
                           icon="DdevIcons.DdevMenuIcon"/>

        <projectService serviceImplementation="de.php_perfect.intellij.ddev.notification.DdevNotifierImpl"
                        serviceInterface="de.php_perfect.intellij.ddev.notification.DdevNotifier"/>
        <projectService serviceImplementation="de.php_perfect.intellij.ddev.state.DdevStateManagerImpl"
                        serviceInterface="de.php_perfect.intellij.ddev.state.DdevStateManager"/>
        <projectService serviceImplementation="de.php_perfect.intellij.ddev.cmd.DdevImpl"
                        serviceInterface="de.php_perfect.intellij.ddev.cmd.Ddev"/>
        <projectService serviceImplementation="de.php_perfect.intellij.ddev.cmd.DdevRunnerImpl"
                        serviceInterface="de.php_perfect.intellij.ddev.cmd.DdevRunner"/>
        <projectService serviceImplementation="de.php_perfect.intellij.ddev.settings.DdevSettingsState"/>

        <projectConfigurable parentId="tools" instance="de.php_perfect.intellij.ddev.settings.DdevSettingsConfigurable"
                             id="de.php_perfect.intellij.ddev.settings.DdevSettingsConfigurable"
                             key="settings.headline"/>

        <postStartupActivity implementation="de.php_perfect.intellij.ddev.PostStartupActivity"/>
    </extensions>

    <actions>
        <group id="DdevIntegration.Run" popup="true" text="DDEV" description="Run DDEV action"
               icon="DdevIcons.DdevMenuIcon">
            <add-to-group group-id="ToolsMenu"/>
            <action id="DdevIntegration.Run.Start" text="DDEV Start"
                    class="de.php_perfect.intellij.ddev.actions.DdevStartAction" icon="AllIcons.Actions.Execute"
                    description="Start DDEV for this project">
                <override-text place="MainMenu" text="Start"/>
                <override-text place="EditorPopup" use-text-of-place="MainMenu"/>
            </action>
            <action id="DdevIntegration.Run.Restart" text="DDEV Restart"
                    class="de.php_perfect.intellij.ddev.actions.DdevRestartAction" icon="AllIcons.Actions.Refresh"
                    description="Restart DDEV for this project">
                <override-text place="MainMenu" text="Restart"/>
                <override-text place="EditorPopup" use-text-of-place="MainMenu"/>
            </action>
            <action id="DdevIntegration.Run.Stop" text="DDEV Stop"
                    class="de.php_perfect.intellij.ddev.actions.DdevStopAction" icon="AllIcons.Actions.Pause"
                    description="Stop and remove the containers of a project (Does not lose or harm anything)">
                <override-text place="MainMenu" text="Stop"/>
                <override-text place="EditorPopup" use-text-of-place="MainMenu"/>
            </action>
            <action id="DdevIntegration.Run.Poweroff" text="DDEV Poweroff"
                    class="de.php_perfect.intellij.ddev.actions.DdevPoweroffAction" icon="AllIcons.Actions.Suspend"
                    description="Completely stop all projects and containers">
                <override-text place="MainMenu" text="Poweroff"/>
                <override-text place="EditorPopup" use-text-of-place="MainMenu"/>
            </action>
            <action id="DdevIntegration.Run.Delete" text="DDEV Delete"
                    class="de.php_perfect.intellij.ddev.actions.DdevDeleteAction"
                    icon="AllIcons.CodeWithMe.CwmTerminate"
                    description="Remove all project information (including database) for an existing project">
                <override-text place="MainMenu" text="Delete"/>
                <override-text place="EditorPopup" use-text-of-place="MainMenu"/>
            </action>
            <action id="DdevIntegration.Run.Share" text="DDEV Share"
                    class="de.php_perfect.intellij.ddev.actions.DdevShareAction" icon="AllIcons.Actions.Share"
                    description="Share project on the internet via ngrok">
                <override-text place="MainMenu" text="Share"/>
                <override-text place="EditorPopup" use-text-of-place="MainMenu"/>
            </action>
            <action id="DdevIntegration.Run.Config" text="DDEV Config"
                    class="de.php_perfect.intellij.ddev.actions.DdevConfigAction" icon="AllIcons.General.Settings"
                    description="Create a DDEV configuration in the current project">
                <override-text place="MainMenu" text="Config"/>
                <override-text place="EditorPopup" use-text-of-place="MainMenu"/>
            </action>
        </group>
        <action id="DdevIntegration.CheckVersion" text="DDEV Check Version"
                class="de.php_perfect.intellij.ddev.actions.CheckVersionAction"
                description="Check if a new DDEV version is available for download"/>
        <action class="de.php_perfect.intellij.ddev.actions.DisableCheckForUpdatesAction"/>
    </actions>
</idea-plugin>
